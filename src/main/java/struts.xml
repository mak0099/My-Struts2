<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
	<constant name="struts.mapper.action.prefix.enabled" value="true" />
    <package name="basicstruts2" extends="struts-default">
        <action name="index">
            <result name="success" type="redirect">login.jsp</result>
        </action>
        <action name="submitLogin" class="com.mystruts.actions.LoginAction">
        	<result name="success">/search.jsp</result>
        	<result name="input">/login.jsp</result>
        </action>
        <action name="submitSearch" class="com.mystruts.actions.SearchAction">
        	<result name="success">/search.jsp</result>
        	<result name="input">/search.jsp</result>
        </action>
        <action name="checkAvailability" class="com.mystruts.actions.RegistrationAction" method="checkAvailability">
        	<result name="success">/registration.jsp</result>
        	<result name="input">/registration.jsp</result>
        </action>
        <action name="submitRegistration" class="com.mystruts.actions.RegistrationAction">
        	<result name="success">/registration-confirmation.jsp</result>
        	<result name="input">/registration.jsp</result>
        </action>
        <action name="confirmRegistration" class="com.mystruts.actions.RegistrationAction" method="confirmRegistration">
        	<result name="success">/search.jsp</result>
        	<result name="input">/registration.jsp</result>
        </action>
        <action name="editUser" class="com.mystruts.actions.EditAction">
        	<result name="success">/edit.jsp</result>
        	<result name="404">/404.jsp</result>
        </action>
        <action name="submitEdit" class="com.mystruts.actions.UpdateAction">
        	<result name="success">/edit-confirmation.jsp</result>
        	<result name="input">/edit.jsp</result>
        </action>
        <action name="confirmEdit" class="com.mystruts.actions.UpdateAction" method="confirmEdit">
        	<result name="success">/search.jsp</result>
        	<result name="input">/edit.jsp</result>
        </action>
        <action name="deleteUser" class="com.mystruts.actions.DeleteAction">
        	<result name="success">/delete-confirmation.jsp</result>
        	<result name="input">/404.jsp</result>
        </action>
        <action name="confirmDelete" class="com.mystruts.actions.DeleteAction" method="confirmDelete">
        	<result name="success">/search.jsp</result>
        	<result name="input">/404.jsp</result>
        </action>
<!--         <action name="backToRegistration" class="com.mystruts.actions.RegistrationAction" method="back"> -->
<!--         	<result name="success">/registration.jsp</result> -->
<!--         </action> -->
    </package>

</struts>