<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
	<constant name="struts.mapper.action.prefix.enabled" value="true" />
    <package name="basicstruts2" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="submitLogin" class="com.mystruts.actions.LoginAction">
        	<result name="success">/search.jsp</result>
        	<result name="input">/login.jsp</result>
        </action>
        <action name="checkAvailability" class="com.mystruts.actions.CheckAvailabilityAction">
        	<result name="success">/registration.jsp</result>
        	<result name="input">/registration.jsp</result>
        </action>
        <action name="submitRegistration" class="com.mystruts.actions.RegistrationAction">
        	<result name="success">/registration-confirmation.jsp</result>
        	<result name="input">/registration.jsp</result>
        </action>
        <action name="confirmRegistration" class="com.mystruts.actions.RegistrationAction" method="confirmRegistration">
        	<result name="success">/search.jsp</result>
        	<result name="input">/registration.jsp</result>
        </action>
    </package>

</struts>